---
import type { CollectionEntry } from 'astro:content';
import Pill from './Pill.astro';

interface Props {
	recipe: CollectionEntry<'recipes'> & {
		data: CollectionEntry<'recipes'>['data'] & {
			nutrition?: Record<string, string | number>;
		};
	};
}

const { data, slug } = Astro.props.recipe;
---

<a class="card" href={`/recipes/${slug}`}>
	<span class="title">{data.title}</span>
	{data.tags && (
		<div class="tags">
			{data.tags.map(tag => <Pill>{tag}</Pill>)}
		</div>
	)}
	<img src={data.img} alt={data.img_alt || ''} loading="lazy" decoding="async" />
	<div class="recipe-info">
		{data.cookingTime && <span class="time">{data.cookingTime}</span>}
		{data.difficulty && <span class="difficulty">{data.difficulty}</span>}
		{data.servings && <span class="servings">{data.servings} servings</span>}
	</div>
	{data.nutrition && (
		<div class="nutrition">
			<span>Nutrition:</span>
			<ul>
				{Object.entries(data.nutrition).map(([k, v]) => <li>{k}: {v}</li>)}
			</ul>
		</div>
	)}
	<div class="card-actions">
		<button class="button print-btn" title="Print this recipe" onclick="window.print(); event.stopPropagation();">üñ®Ô∏è Print</button>
		<span class="ratings" aria-label="Recipe rating">‚òÖ‚òÖ‚òÖ‚òÖ‚òÖ</span>
	</div>
</a>

<style>
	.card {
		display: grid;
		grid-template: auto 1fr auto / auto 1fr;
		height: 14rem;
		background: var(--gradient-subtle);
		border: 1px solid var(--gray-800);
		border-radius: 0.75rem;
		overflow: hidden;
		box-shadow: var(--shadow-sm);
		text-decoration: none;
		font-family: var(--font-brand);
		font-size: var(--text-lg);
		font-weight: 500;
		transition: box-shadow var(--theme-transition);
		position: relative;
	}

	.card:hover {
		box-shadow: var(--shadow-md);
	}

	.title {
		grid-area: 1 / 1 / 2 / 2;
		z-index: 1;
		margin: 0.5rem;
		padding: 0.5rem 1rem;
		background: var(--gray-999);
		color: var(--gray-200);
		border-radius: 0.375rem;
		font-size: var(--text-md);
	}

	img {
		grid-area: 1 / 1 / 3 / 3;
		width: 100%;
		height: 100%;
		object-fit: cover;
	}

	.recipe-info {
		grid-area: 3 / 1 / 4 / 3;
		display: flex;
		gap: 0.5rem;
		padding: 0.5rem;
		background: rgba(255, 255, 255, 0.9);
		backdrop-filter: blur(4px);
		font-size: var(--text-sm);
		color: var(--gray-300);
	}

	.time, .difficulty, .servings {
		padding: 0.25rem 0.5rem;
		background: var(--accent-regular);
		color: var(--accent-text-over);
		border-radius: 0.25rem;
		font-weight: 500;
	}

	.tags {
		display: flex;
		gap: 0.25rem;
		margin: 0.5rem 0 0.25rem 0;
	}
	.nutrition {
		font-size: var(--text-sm);
		margin: 0.25rem 0;
		color: var(--gray-400);
	}
	.nutrition ul {
		margin: 0;
		padding-left: 1em;
	}
	.card-actions {
		display: flex;
		align-items: center;
		gap: 0.5em;
		margin-top: 0.5em;
	}
	.print-btn {
		font-size: 0.95em;
		padding: 0.3em 0.8em;
	}
	.ratings {
		color: gold;
		font-size: 1.1em;
	}

	@media (min-width: 50em) {
		.card {
			height: 24rem;
			border-radius: 1.5rem;
		}

		.title {
			border-radius: 0.9375rem;
			font-size: var(--text-lg);
		}

		.recipe-info {
			padding: 0.75rem;
			font-size: var(--text-base);
		}
	}
</style> 